<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.thestonedapesradio" version="1.0.0" versionCode="2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>The Stoned Apes Radio (By Hash Borgir)</name>
    <description>
        The Stoned Apes Psychedelic Music and Talk Radio by Hash C. Borgir
    </description>
    <author email="stoned@stoned.io" href="http://TheStonedApes.com">
        The Stoned Apes
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
